    <TextView android:id="@+id/assetslist_item_yymmdd" 
        android:layout_width="80dp"
        android:layout_height="wrap_content" 
        android:textColor="#FF3d4e5F"
        android:textSize="15sp" />
    
    <TextView android:id="@+id/assetslist_item_src" 
        android:layout_width="87dp"
        android:layout_height="wrap_content" 
        android:textColor="#FF3d4e5F"
        android:textSize="15sp" />
    
    <TextView android:id="@+id/assetslist_item_flow" 
        android:layout_width="40dp"
        android:layout_height="wrap_content" 
        android:textColor="#FF3d4e5F"
        android:textSize="15sp" />
    
    <TextView android:id="@+id/assetslist_item_money" 
        android:layout_width="50dp"
        android:layout_height="wrap_content" 
        android:textColor="#FF3d4e5F"
        android:textSize="15sp" />
    
