<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/id_evaluate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="#FF83aeae"
        android:textSize="25sp"
        android:text="收支总览" />
    
    <com.example.mybill.widget.DateSpinnerView 
        android:id="@+id/id_evaluate_dateview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignLeft="@id/id_evaluate_title"
        android:layout_below="@id/id_evaluate_title"       
        android:layout_marginTop="5dp" >        
    </com.example.mybill.widget.DateSpinnerView>
    
    
    <ListView
        android:id="@+id/id_evaluate_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_evaluate_dateview"
        android:layout_below="@id/id_evaluate_dateview"
        android:layout_marginTop="20dp" >
    </ListView>
    

</RelativeLayout>
