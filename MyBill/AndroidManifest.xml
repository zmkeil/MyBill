<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mybill"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" ></uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" ></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" ></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" ></uses-permission>
    <uses-permission android:name="android.permission.INTERNET" ></uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK" ></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"></uses-permission>

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bill_book"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".NewBillActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity" >
        </activity>
        
        <activity
            android:name=".NewAssetsActivity"
            android:label="@string/title_activity_new_assets"
            android:parentActivityName=".MainActivity" >
        </activity>
        
        <activity
            android:name=".UpdateAssetsActivity"
            android:label="@string/title_activity_update_assets"
            android:parentActivityName=".MainActivity" >
        </activity>        
        
        <activity
            android:name=".UpdateBillActivity"
            android:label="@string/title_activity_update_bill"           
            android:parentActivityName=".MainActivity" >
        </activity>
        
        <activity
            android:name=".SettingActivity"
            android:label="@string/settings"           
            android:parentActivityName=".MainActivity" >
        </activity>
        
        <service 
            android:enabled="true" 
            android:name="com.example.mybill.network.NetworkService"
            android:process=":networkservice"
            android:priority="1000" >
        </service>
        
    </application>

</manifest>
