<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <com.example.mybill.widget.DateSpinnerView 
        android:id="@+id/id_assets_dateview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_marginTop="2dp" >        
    </com.example.mybill.widget.DateSpinnerView>
    
    <TextView
        android:id="@+id/id_assets_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignLeft="@id/id_assets_dateview"
        android:layout_below="@id/id_assets_dateview" 
        android:layout_marginTop="7dp"     
        android:textColor="#FF83aeae"
        android:textSize="25sp"
        android:text="固定资产" />
    
    <LinearLayout 
        android:id="@+id/id_assets_overview_layout"
	    android:layout_width="match_parent"
	    android:layout_height="28dp"
	    android:layout_alignLeft="@id/id_assets_title"
        android:layout_below="@id/id_assets_title"
	    android:orientation="horizontal"
	    android:layout_marginTop="5dp"
	    android:background="#997788" >
	    
	    <TextView 
	        android:layout_width="80dp"
	        android:layout_height="wrap_content" 
	        android:textColor="#FF3d4e5F"
	        android:textSize="20sp"
	        android:text="总资产" />
	    
	    <TextView android:id="@+id/id_assets_total_textview" 
	        android:layout_width="80dp"
	        android:layout_height="wrap_content" 
	        android:textColor="#FF3d4e5F"
	        android:textSize="20sp" />
	    
	    <TextView 
	        android:layout_width="80dp"
	        android:layout_height="wrap_content" 
	        android:textColor="#FF3d4e5F"
	        android:textSize="20sp"
	        android:text="本月增值" />
	    
	    <TextView android:id="@+id/id_assets_increment_textview" 
	        android:layout_width="80dp"
	        android:layout_height="wrap_content" 
	        android:textColor="#FF3d4e5F"
	        android:textSize="20sp" />   	
	</LinearLayout>

    <ListView
        android:id="@+id/id_assets_detail_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_assets_overview_layout"
        android:layout_below="@id/id_assets_overview_layout"
        android:layout_marginTop="8dp" >
    </ListView>
    
    
    
    <TextView
        android:id="@+id/id_pocket_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_assets_detail_listview"
        android:layout_below="@id/id_assets_detail_listview"
        android:layout_marginTop="10dp"
        android:textColor="#FF83aeae"
        android:textSize="25sp"
        android:text="流动资产" />
    
    <ListView
        android:id="@+id/id_pocket_detail_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_pocket_title"
        android:layout_below="@id/id_pocket_title"
        android:layout_marginTop="5dp" >
    </ListView>

</RelativeLayout>
